{
  "name": "blogmatica-mst-apollo",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@graphql-codegen/add": "^1.3.1",
    "@graphql-codegen/cli": "^1.3.1",
    "@graphql-codegen/introspection": "1.3.1",
    "@graphql-codegen/typescript": "1.3.1",
    "@graphql-codegen/typescript-operations": "^1.3.1",
    "@graphql-codegen/typescript-react-apollo": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^2.5.0",
    "lint-staged": "^8.2.1",
    "typescript-plugin-styled-components": "^1.4.4"
  },
  "dependencies": {
    "@apollo/react-common": "^3.1.4",
    "@apollo/react-hooks": "^3.1.5",
    "@chakra-ui/core": "^0.7.0",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@graphql-codegen/typescript-resolvers": "^1.4.0",
    "@mdx-js/react": "^1.0.21",
    "@types/graphql": "^14.2.2",
    "@types/history": "^4.7.2",
    "@types/jest": "24.0.15",
    "@types/lodash.capitalize": "^4.2.6",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.pick": "^4.4.6",
    "@types/node": "^14.0.1",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "@types/react-router-dom": "5.1.2",
    "apollo": "^2.27.4",
    "apollo-boost": "^0.4.3",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-link-context": "^1.0.18",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.15",
    "apollo-link-state": "^0.4.2",
    "babel-plugin-macros": "^2.8.0",
    "emotion-theming": "^10.0.27",
    "eslint": "^6.8.0",
    "graphql": "^14.4.1",
    "graphql-request": "^1.8.2",
    "immer": "^6.0.3",
    "lodash.capitalize": "^4.2.1",
    "lodash.get": "^4.4.2",
    "lodash.pick": "^4.4.0",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "mobx-react-lite": "^2.0.6",
    "mobx-state-tree": "^3.16.0",
    "mst-gql": "^0.11.0",
    "mst-middlewares": "^3.16.0",
    "prettier": "^2.0.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-apollo": "^2.5.8",
    "react-apollo-hooks": "^0.4.5",
    "react-dom": "^16.13.1",
    "react-router-dom": "5.1.2",
    "react-scripts": "^3.4.1",
    "remotedev": "^0.2.9",
    "ts-optchain": "^0.1.8",
    "typescript": "3.8.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "dev": "NODE_ENV=development react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint-fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,gql,md,html,css,scss}' 'src/*.{ts,tsx,js,jsx,json,gql,md,html,css,scss}'",
    "ts-compile-check": "tsc -p tsconfig.json --noEmit --skipLibCheck",
    "schema:load": "apollo client:download-schema --endpoint=http://localhost:3001/graphql generated-remote-schema.graphql",
    "codegen:generateOnly": "mst-gql --format ts generated-remote-schema.graphql --noReact",
    "codegen": "npm run schema:load && npm run codegen:generateOnly && npm run format"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run ts-compile-check && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npx eslint",
      "npx prettier --write",
      "git add"
    ],
    "src/**/*.{json,gql,md,html,css,scss}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "plugins": []
  }
}
